@page
@model wms_ide.Pages.RegisterModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<section id="contact-form" class="wow fadeIn">
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-sm-8 col-xs-11 center-col xs-no-padding">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group no-margin-bottom">
                        <label asp-for="WMSUser.username" class="text-uppercase"></label>
                        <input asp-for="WMSUser.username" class="input-round lower" />
                        <span asp-validation-for="WMSUser.username" class="text-danger"></span>
                    </div>
                    <div class="form-group no-margin-bottom">
                        <label asp-for="WMSUser.useremail" class="text-uppercase"></label>
                        <input asp-for="WMSUser.useremail" class="input-round lower" />
                        <span asp-validation-for="WMSUser.useremail" class="text-danger" ></span>
                    </div>
                    <div class="form-group no-margin-bottom">
                        <label asp-for="WMSUser.userfullname" class="text-uppercase"></label>
                        <input asp-for="WMSUser.userfullname" class="input-round" />
                        <span asp-validation-for="WMSUser.userfullname" class="text-danger"></span>
                    </div>
                    <div class="form-group no-margin-bottom">
                        <label asp-for="WMSUser.password" class="text-uppercase"></label>
                        <input asp-for="WMSUser.password" class="input-round lower" />
                        <span asp-validation-for="WMSUser.password" class="text-danger"></span>
                    </div>
                    <div class="form-group no-margin-bottom">
                        <label asp-for="WMSUser.password" class="text-uppercase">RE-ENTER PASSWORD</label>
                        <input asp-for="WMSUser.password" class="input-round lower" />
                        <span asp-validation-for="WMSUser.password" class="text-danger"></span>
                    </div>
                    <button class="btn highlight-button-dark btn-small btn-round margin-five no-margin-right" type="submit">Register Now</button>

                </form>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
