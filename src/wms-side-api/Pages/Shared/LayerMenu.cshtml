@model mapfileManager.mapfile.MapObj
<!-- navigation -->
<div class="menu-wrap pull-menu">
    <nav id="layer-panel" class="menu navigation-menu">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="col-md-12 navbar-header no-padding clearfix text-center xs-text-left">
            <a class="no-padding section-link" href="#home"><img src="~/images/logo-light-big.png" alt="" /></a>
            <div class="btn-toolbar pull-right" role="toolbar" aria-label="Toolbar with button groups">
                <div class="btn-group mr-2" role="group" aria-label="First group">
                    <button type="button" class="btn btn-very-small button xs-no-margin">+ Add layer</button>
                </div>
                <div class="btn-group mr-2" role="group" aria-label="First group">
                    <button type="button" class="btn btn-very-small button xs-no-margin"><i class="fas fa-clone"></i></button>
                    <button type="button" class="btn btn-very-small button xs-no-margin"><i class="fas fa-trash-alt"></i></button>
                    <button type="button" class="btn btn-very-small button xs-no-margin"><i class="fas fa-eye-slash"></i></button>
                </div>
            </div>
        </div>
        <div class="col-md-12 no-padding clearfix">
            <div class="no-padding" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-default navbar-nav">
                    @foreach(var lyr in Model.GetLayers())
                    {
                        var entry = @lyr.entries.Find(e => e.name.Equals("NAME"));
                        var id = string.IsNullOrEmpty(entry.value) ? entry.defValue : entry.value;
                        <li>
                            <input type="checkbox" id="@id" class="pull-right" checked />
                            <label class="section-link" for="@id">@id</label>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <div class="col-md-12 no-padding clearfix">
            <div class="footer-social no-margin-bottom no-margin-lr text-center">
                <!-- social media link -->
                <a href="https://www.facebook.com/" target="_blank"><i class="fa fa-facebook icon"></i></a>
                <a href="https://twitter.com/" target="_blank"><i class="fa fa-twitter"></i></a>
                <a href="https://plus.google.com" target="_blank"><i class="fa fa-google-plus"></i></a>
                <a href="https://www.linkedin.com/" target="_blank"><i class="fa fa-linkedin"></i></a>
                <!-- end social media link -->
            </div>
        </div>
    </nav>
    <button class="close-button" id="close-button">Close Menu</button>
</div>
<button class="menu-button" id="open-button">Open Menu</button>